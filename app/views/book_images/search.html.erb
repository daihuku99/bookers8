<h1>Book search</h1>

<%= form_with url: search_book_images_path, method: :get, local: true do |f| %>
	<%= f.text_field :title %>
	<%= f.submit :search %>
<% end %>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Book</th>
		</tr>
	</thead>
	<tbody>
		<% @book_images.each do |book_image| %>
		<tr>
			<td><%= link_to book_image.title, book_image_path(book_image) %></td>
		</tr>
		<% end %>
	</tbody>
</table>