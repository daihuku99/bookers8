<% if flash[:nitice] %>
	<%= flash[:notice] %>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render'book_images/template', user: @user %>
		</div>
		<div class="col-xs-9">
			<div class="search-wrapper">
				<h4>Book search</h4>
				<%= form_with url: search_book_images_path, method: :get, local: true do |f| %>
					<%= f.text_field :title %>
					<%= f.submit :search %>
				<% end %>
			</div>
			<h1>Books</h1>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Title</th>
						<th>Opinion</th>
						<th>Comments</th>
						<th>Favorites</th>
						<th colspan="4"></th>
					</tr>
				</thead>
				<tbody>
					<% @book_images.each do |book_image| %>
					<tr>
						<td><%= link_to book_image.title, book_image_path(book_image.id) %></td>
						<td><%= book_image.body %></td>
						<td><%= book_image.book_comments.count %>comments</td>
						<td><%= book_image.favorites.count %>いいね</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>