<h1>User info</h1>

	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: 'no_image.jpg' %>

		<h4>Name</h4>
		<%= user.name %>
		<h5>Introduction</h5>
		<%= user.introduction %><br>
		<%= "フォロー数: #{user.follower.count} " %>
		<%= "フォロワー数: #{user.followed.count}" %><br>
		<% unless user == current_user %>
			<% if current_user.following?(user) %>
				<%= link_to 'フォローを外す', unfollow_path(user.id), method: :post %><br>
			<% else %>
				<%= link_to 'フォローする', follow_path(user.id), method: :post %><br>
			<% end %>
		<% end %>
		<% if user.id == current_user.id %>
			<%= link_to 'edit', edit_user_path(user.id) %>
		<% end %>

<h1>New Book</h1>

<%= form_for(book_image_new) do |f| %>
<%= render'layouts/error_messages', model: f.object %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Opinion</h4>
	<%= f.text_area :body %>

	<%= f.attachment_field :image %>

	<%= f.submit 'Create Book', class: 'btn btn-default' %>

<% end %>

