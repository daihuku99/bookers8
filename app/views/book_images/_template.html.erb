<h1>User info</h1>

	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: 'no_image.jpg' %>

		<h4>Name</h4>
		<%= user.name %>
		<h5>Introduction</h5>
		<%= user.introduction %><br>
		<%= "フォロー数: #{user.follower.count} " %>
		<%= "フォロワー数: #{user.followed.count}" %><br>
		<% unless user == current_user %>
			<% if current_user.following?(user) %>
				<%= link_to 'フォローを外す', unfollow_path(user.id), method: :post %><br>
			<% else %>
				<%= link_to 'フォローする', follow_path(user.id), method: :post %><br>
			<% end %>
		<% end %>
		<% if user.id == current_user.id %>
			<%= link_to 'edit', edit_user_path(user.id) %><br>
		<% end %>

		<%= link_to 'New Book', new_book_image_path, class: 'btn btn-default' %>
		<%= link_to 'New Photo', new_photo_path, class: 'btn btn-default' %>