<h1>Editing Book</h1>

<%= form_for(@book_image) do |f| %>
<%= render'layouts/error_messages', model: f.object %>
	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Opinion</h4>
	<%= f.text_area :body %>

	<h4>Image</h4>
	<%= f.attachment_field :image %>

	<%= f.submit 'Update Book' %>

<% end %>