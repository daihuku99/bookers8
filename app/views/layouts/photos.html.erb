<!DOCTYPE html>
<html>
  <head>
    <title>photos - Bookers8</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'public/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'public/application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1 class="logo">Bookers8</h1>
      <div class="header-lists">
        <ul class="header-list">
          <% if user_signed_in? %>
            <li>Welcome <%= current_user.name %></li>
            <li><%= link_to 'Top', '/' %></li>
            <li><%= link_to 'My page', user_path(current_user.id) %></li>
            <li><%= link_to 'Users', users_path %></li>
            <li><%= link_to 'Books', book_images_path %></li>
            <li><%= link_to 'Phtotos', photos_path %></li>
            <li><%= link_to 'logout', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Top', '/' %></li>
            <li><%= link_to 'About', about_path  %></li>
            <li><%= link_to 'sign up', new_user_registration_path %></li>
            <li><%= link_to 'login', new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
