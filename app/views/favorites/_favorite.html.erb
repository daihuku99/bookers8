<% if @book_image.favorited_by?(current_user) %>
	<%= link_to book_image_favorites_path(@book_image), method: :delete, remote: true do %>
	    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
		<h5><%= @book_image.favorites.count %>いいね</h5>
	<% end %>
<% else %>
	<%= link_to book_image_favorites_path(@book_image), method: :post, remote: true do %>
		<i class="fa fa-heart" aria-hidden="true" ></i>
		<h5><%= @book_image.favorites.count %>いいね</h5>
	<% end %>
<% end %>