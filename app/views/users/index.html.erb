<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render'book_images/template', book_image_new: @book_image_new, user: @user %>
		</div>
		<div class="col-xs-9">
			<div class="search-wrapper">
				<h4>User search</h4>
				<%= form_with url: search_users_path, method: :get, local: true do |f| %>
					<%= f.text_field :name %>
					<%= f.submit :search %>
				<% end %>
			</div>
			<h1>Users</h1>
			<table class="table table-striped">
				<thead>
					<tr>Imge</tr>
					<tr>Name</tr>
					<tr></tr>
					<tr></tr>
					<tr></tr>
					<tr colspan="5"></tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
							<td><%= user.name %></td>
							<td><%= link_to 'show', user_path(user.id) %></td>
							<% if user_signed_in? && current_user.following?(user) %>
								<td><%= link_to 'フォローを外す', unfollow_path(user.id), method: :post %></td>
							<% else %>
								<td><%= link_to 'フォローする', follow_path(user.id), method: :post %></td>
							<% end %>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>