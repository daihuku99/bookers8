<h1>User search</h1>

<%= form_with url: search_users_path, method: :get, local: true do |f| %>
	<%= f.text_field :name %>
	<%= f.submit :search %>
<% end %>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= link_to user.name, user_path(user) %></td>
		</tr>
		<% end %>
	</tbody>
</table>